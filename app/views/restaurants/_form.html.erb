<%= form_with(model: restaurant, class: "new-restaurant-form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :opening_hours %>
  <%= f.text_field :opening_hours %>  
  <%= f.label :contact_number %>
  <%= f.text_field :contact_number %>  
  <%= f.label :cuisine %>
  <%= f.text_field :cuisine %>  
  <%= f.label :cost_for_2 %>
  <%= f.text_field :cost_for_2 %>
  <%= f.fields_for :address do |address_form| %>
      <%= address_form.label :street %>
      <%= address_form.text_field :street %>
      <%= address_form.label :suburb %>
      <%= address_form.text_field :suburb %>
      <%= address_form.label :postcode %>
      <%= address_form.text_field :postcode %>
      <%= address_form.label :state %>
      <%= address_form.text_field :state %>
      <%= address_form.label :country %>
      <%= address_form.text_field :country %>
  <% end %>  
  <%= f.submit id: "submit" %>
<% end %>