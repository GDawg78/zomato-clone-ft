<h2>Restaurants</h2>
<%= link_to "Create a new restaurant ğŸŒ­", new_restaurant_path %>

<% @restaurants.each do |restaurant| %>
  <div>
    <h3>Name: <%= restaurant.name %></h3>
    <h3>Opening hours: <%= restaurant.opening_hours %></h3>
    <% if restaurant.address %>
      <h3>Address: <%= restaurant.address.street %>, <%= restaurant.address.suburb %></h3>
    <% end %>
    <h4>Created by <%= restaurant.user.email %></h4>
    <%= link_to "Show", restaurant_path(restaurant.id)  %>
    <% if user_signed_in? && current_user.restaurants.include?(restaurant) %>
      <%= link_to "Delete", restaurant_path(restaurant.id), method: :delete %>
    <% end %>
  </div>
<% end %>